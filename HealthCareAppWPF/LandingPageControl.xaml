<UserControl x:Class="HealthCareAppWPF.LandingPageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="500">
    <Grid>
        <TextBlock Text="Healthcare App" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="10,20,10,0"/>
        <TextBlock Text="Choose Your Role" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="18" Margin="10,60,10,0"/>

        <Button Content="Patient" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="69" Margin="134,0,0,110" Click="PatientButton_Click"/>
        <Button Content="Doctor" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="69" Margin="0,0,131,110" Click="DoctorButton_Click"/>
    </Grid>
</UserControl>
